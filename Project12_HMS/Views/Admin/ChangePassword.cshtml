@model HMS.Web.Models.ChangePasswordVM

@{
	ViewData["Title"] = "Change Password";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
	<ol class="breadcrumb">
		<li>
			<a href="#">
				<em class="fa fa-home"></em>
			</a>
		</li>
		<li class="active">Admin</li>
		<li class="active">Change Password</li>
	</ol>
</div>
<h2>Change Password</h2>
<hr />

<div class="row">
	<form asp-action="ChangePassword">
		<div class="col-md-12">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group col-md-6">
				<label asp-for="OldPassword"></label>
				<input asp-for="OldPassword" class="form-control" autocomplete="old-password" />
				<span asp-validation-for="OldPassword" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-12">
			<div class="form-group col-md-6">
				<label asp-for="Password"></label>
				<input asp-for="Password" class="form-control" autocomplete="new-password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group col-md-6">
				<label asp-for="ConfirmPassword"></label>
				<input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-12">
			<div class="form-group col-md-6">
				<input type="submit" value="Set password" class="btn btn-success" />
			</div>
		</div>
	</form>
</div>