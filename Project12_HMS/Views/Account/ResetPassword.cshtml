@model HMS.Web.Models.ResetPasswordVM

@{
	ViewData["Title"] = "Reset Password";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reset Password</h2>
<hr />

<div class="row">
	<form asp-action="ResetPassword">
		<div class="col-md-12">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input asp-for="TokenCode" type="hidden" />
			<div class="form-group col-md-6">
				<label asp-for="Email"></label>
				<input asp-for="Email" class="form-control" autocomplete="old-password" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-12">
			<div class="form-group col-md-6">
				<label asp-for="Password"></label>
				<input asp-for="Password" class="form-control" autocomplete="new-password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group col-md-6">
				<label asp-for="ConfirmPassword"></label>
				<input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-12">
			<div class="form-group col-md-6">
				<input type="submit" value="Set password" class="btn btn-success" />
			</div>
		</div>
	</form>
</div>