@model HMS.Web.Models.PatientFeedbackVM

@{
    ViewData["Title"] = "PatientFeedback";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<div class="row">
	<ol class="breadcrumb">
		<li>
			<a href="#">
				<em class="fa fa-home"></em>
			</a>
		</li>
        <li class="active">Patient</li>
        <li class="active">PatientFeedback</li>
	</ol>
</div>

<h2>Patient Feedback</h2>

<hr />
<div class="row">
    <form asp-action="PatientFeedback">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-12">
            <div class="form-group col-md-6">
                <label asp-for="PatientName" class="control-label"></label>
                <input asp-for="PatientName" class="form-control" />
                <span asp-validation-for="PatientName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group col-md-6">
                <label asp-for="PatientFeedback" class="control-label"></label>
                <input asp-for="PatientFeedback" class="form-control" />
                <span asp-validation-for="PatientFeedback" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group col-md-6">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>        
    </form>
   
</div>

