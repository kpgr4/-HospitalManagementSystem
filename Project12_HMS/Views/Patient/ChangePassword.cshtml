@model HMS.Web.Models.ResetPasswordViewModel

@{
	ViewData["Title"] = "ChangePassword";
	Layout = "~/Views/Shared/_PatientLayout.cshtml";
}
<h2>ChangePassword</h2>

<hr />
<div class="row">
	<form asp-action="ChangePassword">
		<input type="hidden" asp-for="Email" class="form-control" />
		<input type="hidden" asp-for="Token" class="form-control" />
		<div class="col-md-12">
			<div class="form-group col-md-6">
				<label asp-for="Password" class="control-label"></label>
				<input asp-for="Password" asp-items="model.statuslist" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group col-md-6">
				<label asp-for="ConfirmPassword" class="control-label"></label>
				<input asp-for="ConfirmPassword" class="form-control" />
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-12">
			<div class="form-group col-md-6">
				<input type="submit" value="Save" class="btn btn-success" />
			</div>
		</div>
	</form>
</div>
